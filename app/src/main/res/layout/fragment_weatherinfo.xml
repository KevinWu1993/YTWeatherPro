<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--天气信息卡-->
    <android.support.v7.widget.CardView
        android:id="@+id/weather_info_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/card_left_margin"
        android:layout_marginRight="@dimen/card_right_margin"
        android:layout_marginTop="@dimen/card_top_margin"
        app:cardBackgroundColor="?attr/cardViewBackground"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/card_padding">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Test"
                android:textColor="?attr/textColor" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <!--天气信息卡片-->
    <android.support.v7.widget.CardView
        android:id="@+id/temperature_info_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/card_left_margin"
        android:layout_marginRight="@dimen/card_right_margin"
        android:layout_marginTop="@dimen/card_top_margin"
        app:cardBackgroundColor="?attr/cardViewBackground"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/card_padding">


        </LinearLayout>
    </android.support.v7.widget.CardView>

    <!--污染程度信息卡片-->
    <android.support.v7.widget.CardView
        android:id="@+id/pollution_info_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/card_left_margin"
        android:layout_marginRight="@dimen/card_right_margin"
        android:layout_marginTop="@dimen/card_top_margin"
        app:cardBackgroundColor="?attr/cardViewBackground"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/card_padding">

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <!--紫外线信息卡片-->
    <android.support.v7.widget.CardView
        android:id="@+id/ultraviolet_radiation_info_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/card_left_margin"
        android:layout_marginRight="@dimen/card_right_margin"
        android:layout_marginTop="@dimen/card_top_margin"
        app:cardBackgroundColor="?attr/cardViewBackground"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/card_padding">

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <!--感冒指数卡片-->
    <android.support.v7.widget.CardView
        android:id="@+id/cold_info_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/card_left_margin"
        android:layout_marginRight="@dimen/card_right_margin"
        android:layout_marginTop="@dimen/card_top_margin"
        app:cardBackgroundColor="?attr/cardViewBackground"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/card_padding">

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <!--运动指数卡片-->
    <android.support.v7.widget.CardView
        android:id="@+id/sport_info_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/card_left_margin"
        android:layout_marginRight="@dimen/card_right_margin"
        android:layout_marginTop="@dimen/card_top_margin"
        app:cardBackgroundColor="?attr/cardViewBackground"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/card_padding">

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <!--穿衣指数卡片-->
    <android.support.v7.widget.CardView
        android:id="@+id/dress_info_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/card_left_margin"
        android:layout_marginRight="@dimen/card_right_margin"
        android:layout_marginTop="@dimen/card_top_margin"
        app:cardBackgroundColor="?attr/cardViewBackground"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/card_padding">

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <!--风力风向卡片-->
    <android.support.v7.widget.CardView
        android:id="@+id/wind_info_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/card_left_margin"
        android:layout_marginRight="@dimen/card_right_margin"
        android:layout_marginTop="@dimen/card_top_margin"
        app:cardBackgroundColor="?attr/cardViewBackground"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/card_padding">

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>